<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a>
    </li>
    <li>
      <a href="#">Dashboard</a>
    </li>
  </ul>
</div>


<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well">
        <h2><i class="glyphicon glyphicon-info-sign"></i> Ongoing Projects</h2>

        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round btn-default">
	    <i class="glyphicon glyphicon-cog"></i>
	  </a>
          <a href="#" class="btn btn-minimize btn-round btn-default">
	    <i class="glyphicon glyphicon-chevron-up"></i>
	  </a>
          <a href="#" class="btn btn-close btn-round btn-default">
	    <i class="glyphicon glyphicon-remove"></i>
	  </a>
        </div>
      </div>
  

<div class="row">
<div class="box col-md-12">
<%=form_for :filter, url: filter_activity_path, remote: true do |form|%>
<label class="box col-md-1">Filter</label>
<div class="box col-md-3"><%=form.select :filter_value,['NONE','ACTIVITY TYPE','DATE','STATUS'],{},{filter_path: filter_user_activity_path,class: "form-cntrol",onChange: "filterUserActivity(this)"}%></div>
<%end%>
</div>
</div>


      <div class="box-content" id="user_activities">
      <%=render 'dashboard'%>
    </div>
  </div>
  <div id="dialog-act" class="modal fade" aria-hidden="true" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Remarks</h4>
        </div>
        <div class="modal-body">
          <%= form_tag reject_job_path do %>
            <%= text_area_tag :remarks, '', placeholder: 'Your Remarks', autofocus: true, required: true %>
            <%= hidden_field_tag :rej_id %>
            <%= hidden_field_tag :current_act_id %>
            <%= submit_tag "Reject", class: "btn btn-primary" %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>


  <div id="dialog-remarks" class="modal fade" aria-hidden="true" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Given Remarks</h4>
        </div>
        <div class="modal-body" id='remarks-given'>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div>

</div>
