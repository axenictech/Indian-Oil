<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a>
    </li>
    <li>
      <a href="#"> Manage Activity</a>
    </li>
  </ul>
</div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i>Upload new Activities </h2>

        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round btn-default">
	    <i class="glyphicon glyphicon-chevron-up"></i>
	  </a>
          <a href="#" class="btn btn-close btn-round btn-default">
	    <i class="glyphicon glyphicon-remove"></i>
	  </a>
        </div>
      </div>



<div  class="box-content">
<div class="row">
<div class="box col-md-12">
<%=form_for :holiday, url: add_holiday_path do |form|%>
<div class="row">
<label class="box col-md-3">Add Holiday</label>
<div class="box col-md-3"><%= form.date_field :date%></div>
</div>
<div class="row">
<div class="box col-md-10">
<%=form.submit "Add Holiday"%>
</div>
</div>
<%end%>
</div>
</div>
<div class="row">
<div class="box col-md-10">
        <table class="table table-striped table-bordered table-responsive  nowrap dataTable dtr-inline activityTabel">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Holiday Date</th>
               <th>Action.</th>
            </tr>
          </thead>
          <tbody>
          <%@holidays.each_with_index do |holiday,i|%>
           <tr style="color:#000;">
          <td><%=i+1%></td>
          <td><%=holiday.holiday.strftime("%d/%m")%></td>
          <td style="color: black"><%=link_to "Delete", delete_holiday_path(holiday),{style: "background: black"}%></td>
          </tr>
          <%end%>
          </tbody>
        </table>
      </div>
</div></div>
</div>
</div>
</div>
  <!--/span-->

</div><!--/row-->