<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a>
    </li>
    <li>
      <a href="#"> Manage Activity</a>
    </li>
  </ul>
</div>
<div class="row">
  <div class="box col-md-12">
    <div class="box-inner">
      <div class="box-header well" data-original-title="">
        <h2><i class="glyphicon glyphicon-user"></i> Activities For <%= @job.name %></h2>

        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round btn-default">
	    <i class="glyphicon glyphicon-chevron-up"></i>
	  </a>
          <a href="#" class="btn btn-close btn-round btn-default">
	    <i class="glyphicon glyphicon-remove"></i>
	  </a>
        </div>
      </div>

<div class="row">
<div class="box col-md-12">
<%=form_for :filter, url: filter_activity_path, remote: true do |form|%>
<label class="box col-md-2">Filter By Status</label>
<div class="box col-md-3"><%=form.select :filter_value,['ALL','DONE','PENDING','REJECTED','WIP','CREATED'],{},{filter_path: filter_activity_path,job_id: @job.id,class: "form-cntrol",onChange: "filterActivity(this)"}%></div>
<%end%>
</div>
</div>

      <div  class="box-content">
        <table class="table table-striped table-bordered table-responsive activityTabel">
          <thead>
            <tr>
              <th>Sr.No.</th>
              <th>Description</th>
              <th>Assigned To</th>
              <th>Precedence</th>
              <th>Duration</th>                            
              <th>Current Status</th>
	      <th>Type</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
	    <%- @master_activity.each do |master_activity| %>
	      <%= render partial: "activity", locals: {activity: master_activity, job: @job} %>
	    <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!--/span-->

</div><!--/row-->